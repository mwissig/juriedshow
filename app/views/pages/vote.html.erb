<div class="grid">
  <% @paintings.each do |pa| %>
    <div class="item">
      <div class="frame">
        <svg width='400' height='400' version='1.1' xmlns='http://www.w3.org/2000/svg;'>
          <rect width='100%' height='100%' fill='<%= pa.color4 %>'/>
          <path d='<%= pa.coords3 %>z' stroke='<%= pa.color1 %>' fill='<%= pa.color1 %>'/>
          <path d='<%= pa.coords2 %> z' stroke='<%= pa.color2 %>' fill='<%= pa.color2 %>'/>
          <path d='<%= pa.coords1 %> z' stroke='<%= pa.color3 %>' fill='<%= pa.color3 %>'/></svg>
      </div>

      <div class="vote">
        <h2><%= pa.title %></h2>

        <%= form_for(pa) do |f| %>
        <% f.hidden_field :points, value: pa.points %>
        <%= f.submit "Vote" %>
      <% end %>
    </div>
  </div>
<% end %>
</div>
