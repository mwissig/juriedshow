<%= will_paginate @paintings %>
<div class="allpaintings">
  <% @paintings.each do |pa| %>
    <div class="item">
        <svg viewBox='0 0 400 400' width='200' height='200' version='1.1' xmlns='http://www.w3.org/2000/svg;'>
          <rect width='100%' height='100%' fill='<%= pa.color4 %>'/>
          <path d='<%= pa.coords3 %>z' stroke='<%= pa.color1 %>' fill='<%= pa.color1 %>'/>
          <path d='<%= pa.coords2 %> z' stroke='<%= pa.color2 %>' fill='<%= pa.color2 %>'/>
          <path d='<%= pa.coords1 %> z' stroke='<%= pa.color3 %>' fill='<%= pa.color3 %>'/></svg>
            <br>
            <%= link_to pa.title, painting_path(pa) %> by <%= pa.artist %><br>
          <%= pa.points %> points<br>
  </div>
<% end %>
</div>

<%= button_to "Make Art", root_path, method: :get %>
<%= button_to "Vote", vote_path, method: :get %>
