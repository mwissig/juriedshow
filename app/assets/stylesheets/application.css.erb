html {
width: 100%;
height: 100%;
background-color: white;

}

body {
  margin: 0 auto;
  font-family: 'Ramaraja', serif;
  min-height: 100vh;
  height: auto;
  text-align: center;
  background-image: url('<%= asset_path 'room.jpg' %>');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    /* overflow-y: scroll; */
}

.studio {
  padding-top: 5em;
  display: block;
  width: 100%;
  min-height: 100vh;
  height: auto;
  background-image: url('<%= asset_path 'studio.jpg' %>');
  background-size: cover;
      background-attachment: fixed;
          /* overflow-y: scroll; */
}
.grid {
    padding-top: 5em;
  display: grid;
  grid-template-columns: auto auto;
  grid-template-rows: auto auto;
  grid-gap: 1em;
  margin: 0 auto;
  max-width: 1000px;
}
.view {
    padding-top: 5em;
    display:block;
}
.allpaintings {
  padding-top: 5em;
  padding-left: 1em;
  padding-right: 1em;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
h1, h2, h3 {
  font-family: 'Great Vibes', cursive;
}
form {
  width: 100%;
}
#hide {
  visibility: collapse;
}
.show {
  visibility: visible !important;
}
footer {
  position: absolute;
  bottom: 0;
  right: 1em;
  width: auto;
  text-align: right;
}
.item {
  max-width: 200px;
  line-height: 1em;
  margin: .5em 1em;
}
.item svg {
  background-color: #ddc;
  border: solid 8px #eee;
  border-bottom-color: #451d00;
  border-left-color: #251000;
  border-radius: 2px;
  border-right-color: #251000;
  border-top-color: #000;
  box-sizing: border-box;
  max-width: 216px;
}
a, a:visited {
  color: black;
}
#makeart {
  position: absolute;
  top: 500px;
  margin: 0 auto;
  left: 50%;
-webkit-transform: translateX(-50%);
transform: translateX(-50%)
}
form input {
  font-family: 'Great Vibes', cursive;
  font-size: 30px;
  border: none;
  padding: 5px 30px;
  background-image: url('canvas.jpg');
  -webkit-clip-path: polygon(15% 0, 100% 0%, 85% 100%, 0% 100%);
  clip-path: polygon(15% 0, 100% 0%, 85% 100%, 0% 100%);
}

form input[type='submit'] {
    font-family: 'Trade Winds', cursive;
      background-image: none;
    background-color: red;
      display: inline;
      cursor: pointer;
}

button {

  display: inline;
  margin: 0 auto;
  font-family: 'Trade Winds', cursive;
  font-size: 30px;
  background-color: green;
  border: none;
  padding: 5px 30px;
  -webkit-clip-path: polygon(15% 0, 100% 0%, 85% 100%, 0% 100%);
  clip-path: polygon(15% 0, 100% 0%, 85% 100%, 0% 100%);
        cursor: pointer;
}
.buttons {
  display: flex;
  justify-content: center;
  position: absolute;
  top: 0;
  margin: 0 auto;
  width: 100%;
}
.content {
}
.by {
    font-family: 'Great Vibes', cursive;
  color: white;
  font-weight: bold;
  font-size: 30px;
}
.art {
  width: 100%;
  height: 100%;
}

svg {
  display: inline;
  overflow: hidden;
}

div {
  display: inline;
}

.frame {
  margin: 0 auto;
  max-height: 460px;
  background-color: #ddc;
  border: solid 30px #eee;
  border-bottom-color: #451d00;
  border-left-color: #251000;
  border-radius: 2px;
  border-right-color: #251000;
  border-top-color: #000;
  box-sizing: border-box;
  display: inline-block;
  text-align: center;
}
@media only screen and (max-width: 500px) {
  .buttons {
    max-width: 100vw;
    justify-content: space-around;
  }
footer {
  position: sticky;
margin: 2em auto;
}
  form input, button {
    font-size: 20px;
      padding: 3px 20px;
  }
  .buttons form input {
    font-size: 15px;
    padding: 8px 20px;
    padding-top: 15px;
  }
  .frame {
    max-width: 100%;
    overflow: hidden;
    margin-bottom: 1em;
  }
  .studio, .grid, .view, .allpaintings {
    padding-top: 3em;
  }
.grid {
  line-height: 1em;
  display: block;

}
}
